<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="canifete" class="io.codeforall.bootcamp.canifetes.Canifete"/>
    <bean id="before" class="io.codeforall.bootcamp.canifetes.advices.SummarizerAdvice"/>
    <bean id="after" class="io.codeforall.bootcamp.canifetes.advices.RandomizerAdvice"/>

    <bean id="proxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="canifete"/>
        <property name="interceptorNames">
            <list>
                <value>before</value>
                <value>after</value>
            </list>
        </property>
    </bean>

</beans>